{
	"name": "vscode-rdb",
	"displayName": "RDB - a file system provider",
	"description": "Support for a file system provider that uses PCFAND RDB project files.",
	"version": "0.0.1",
	"publisher": "Jan Spanhel",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/spainhell/vsc-rdb-fsprovider-ext"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onFileSystem:rdb"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "rdb.workspaceInit",
				"title": "Setup Workspace",
				"category": "Rdb"
			},
			{
				"command": "rdb.init",
				"title": "Create Files",
				"category": "Rdb"
			},
			{
				"command": "rdb.reset",
				"title": "Delete Files",
				"category": "Rdb"
			},
			{
				"command": "rdb.deleteFile",
				"title": "Delete \"file.txt\"",
				"category": "Rdb"
			},
			{
				"command": "rdb.addFile",
				"title": "Add \"file.txt\"",
				"category": "Rdb"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "rdb.init",
					"when": "workbenchState == workspace"
				},
				{
					"command": "rdb.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "rdb.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "rdb.addFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "rdb.workspaceInit",
					"when": "workbenchState != workspace"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10"
  	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
